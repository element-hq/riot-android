<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- no action bar window -->
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.DayNight">

        <!-- hide the action bar -->
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

        <!-- status bar color -->
        <item name="colorPrimary">@color/vector_actionbar_background</item>
        <item name="colorPrimaryDark">@color/vector_statusbar_color</item>

        <!-- fonts -->
        <item name="android:typeface">sans</item>

        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <!-- activities background -->
        <!--<item name="android:windowBackground">@color/vector_activity_background_color</item>-->
    </style>


    <!-- NoActionBar + FullScreen -->
    <style name="AppTheme.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- activities background -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- ActionBar + FullScreen -->
    <style name="AppTheme.ActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- show the action bar -->
        <item name="android:windowActionBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- toolbar styles-->
    <style name="VectorToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/vector_actionbar_background</item>
        <item name="background">@color/vector_actionbar_background</item>

        <!-- main text -->
        <item name="titleTextAppearance">@style/Vector.Toolbar.Title</item>

        <item name="theme">@style/VectorToolbarTheme</item>
    </style>

    <style name="VectorToolbarTheme">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">@color/vector_actionbar_icons_color</item>
    </style>

    <style name="Vector.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/vector_actionbar_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight">

        <!-- with action bar -->
        <item name="android:windowActionBar">true</item>

        <!-- status bar color -->
        <item name="colorPrimaryDark">@color/vector_statusbar_color</item>

        <!-- activities background -->
        <!--<item name="android:windowBackground">@color/vector_activity_background_color</item>-->

        <!-- fonts -->
        <item name="android:typeface">sans</item>

        <!-- android ui button -->
        <item name="colorAccent">@color/vector_green_color</item>

        <!-- custom action bar -->
        <item name="android:actionBarStyle">@style/Vector.Styled.ActionBar</item>
        <item name="actionBarStyle">@style/Vector.Styled.ActionBar</item>

        <!-- actionbar icons color -->
        <item name="actionBarTheme">@style/Vector.ActionBarTheme</item>

        <!-- remove the shadow under the actionbar -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:popupMenuStyle">@style/vector.PopupMenu</item>

        <!-- tabbar background -->
        <item name="android:actionBarTabStyle">@style/Vector.TabView</item>
        <item name="actionBarTabStyle">@style/Vector.TabView</item>

        <!-- tabbar text color -->
        <item name="android:actionBarTabTextStyle">@style/Vector.TabText</item>
        <item name="actionBarTabTextStyle">@style/Vector.TabText</item>

        <!-- no divider -->
        <item name="android:actionBarDivider">@null</item>

        <!-- switch color -->
        <item name="colorControlActivated">@color/vector_green_color</item>

    </style>

    <!-- tabbar background -->
    <style name="Vector.TabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/vector_tabbar_background</item>
        <item name="background">@drawable/vector_tabbar_background</item>
    </style>

    <!-- tabbar text color -->
    <style name="Vector.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--  -->
    <style name="vector.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/vector_0_87_black_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <!-- actionbar icons color -->
    <style name="Vector.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/vector_actionbar_icons_color</item>
    </style>

    <!-- custom action bar -->
    <style name="Vector.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/vector_actionbar_background</item>
        <item name="background">@color/vector_actionbar_background</item>

        <!-- remove shadow under the action bar -->
        <item name="elevation">0dp</item>

        <!-- main text -->
        <item name="titleTextStyle">@style/ActionBarTitleText</item>

        <!-- subtext text -->
        <item name="subtitleTextStyle">@style/ActionBarSubTitleText</item>
    </style>

    <!-- main text -->
    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/vector_actionbar_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- subtext text -->
    <style name="ActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/vector_actionbar_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- home scroller menu -->
    <style name="NavigationViewStyle">
        <item name="android:textColor">@color/vector_4d_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- login & registration activities -->
    <style name="LoginAppTheme" parent="AppTheme.NoActionBar">
        <item name="android:editTextStyle">@style/LoginEditTextStyle</item>
        <item name="android:buttonStyle">@style/LoginButtonStyle</item>

        <item name="colorAccent">?attr/editTextColor</item>

    </style>

    <style name="LoginEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- searches activity -->
    <style name="SearchesAppTheme" parent="AppTheme">
        <!-- custom action bar -->
        <item name="android:actionBarStyle">@style/VectorSearches.Styled.ActionBar</item>
        <item name="actionBarStyle">@style/VectorSearches.Styled.ActionBar</item>

        <!-- tabbar background -->
        <item name="android:actionBarTabStyle">@style/VectorSearches.TabView</item>
        <item name="actionBarTabStyle">@style/VectorSearches.TabView</item>

        <!-- tabbar text color -->
        <item name="android:actionBarTabTextStyle">@style/VectorSearches.TabText</item>
        <item name="actionBarTabTextStyle">@style/VectorSearches.TabText</item>

        <!-- no divider -->
        <item name="android:actionBarDivider">@null</item>

        <!-- edittext -->
        <item name="android:editTextStyle">@style/VectorSearches.EditText</item>

        <!-- actionbar icons color -->
        <item name="actionBarTheme">@style/VectorSearches.ActionBarTheme</item>
    </style>

    <style name="VectorSearches.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/searches_cursor_background</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="VectorSearches.Styled.ActionBar" parent="@style/Vector.Styled.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
    </style>

    <!-- tabbar background -->
    <style name="VectorSearches.TabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/vector_search_tabbar_background</item>
        <item name="background">@drawable/vector_search_tabbar_background</item>
    </style>

    <!-- tabbar text color -->
    <style name="VectorSearches.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/vector_green_color</item>
    </style>

    <style name="VectorSearches.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/vector_green_color</item>
    </style>

</resources>
