<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header_texts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/open_chat_header_arrow"
        android:orientation="vertical">

        <!-- keep singleLine="true" because maxLines="1" truncation is not the expected one.-->

        <RelativeLayout
            android:id="@+id/room_action_bar_title_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/room_action_bar_encryption"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:src="@drawable/room_encryption_ok"
                android:tint="?attr/primary_control_color" />

            <TextView
                android:id="@+id/room_action_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/room_action_bar_encryption"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/room_action_bar_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/open_chat_header_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow_drop_down_white" />

</RelativeLayout>