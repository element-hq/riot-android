    <!-- toolbar styles-->
    <style name="VectorToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/primary_color</item>
        <item name="background">?attr/primary_color</item>

        <!-- main text -->
        <item name="titleTextAppearance">@style/Vector.Toolbar.Title</item>

        <item name="theme">@style/VectorToolbarTheme</item>
    </style>

    <style name="VectorToolbarTheme">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">?attr/primary_control_color</item>
    </style>

    <style name="Vector.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <!-- tabbar background -->
    <style name="Vector.TabView.Light" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/vector_tabbar_background_light</item>
        <item name="background">@drawable/vector_tabbar_background_light</item>
    </style>

    <style name="Vector.TabView.Dark" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/vector_tabbar_background_dark</item>
        <item name="background">@drawable/vector_tabbar_background_dark</item>
    </style>

    <!-- tabbar text color -->
    <style name="Vector.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--  -->
    <style name="vector.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">?attr/riot_primary_background_color</item>
        <item name="android:textColor">?attr/riot_primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <!-- actionbar icons color -->
    <style name="Vector.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/primary_control_color</item>
    </style>

    <!-- custom action bar -->
