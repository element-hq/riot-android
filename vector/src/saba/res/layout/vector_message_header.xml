<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messagesAdapter_message_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/messagesAdapter_message_header_top_margin"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/messagesAdapter_message_header_text"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@drawable/background_message_header"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="Today" />

    <View
        android:id="@+id/messagesAdapter_message_header_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="16dp" />
</LinearLayout>