<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- DARK THEME COLORS -->

    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_color_dark_dark</item>
