<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="56dp"
    android:id="@+id/messagesAdapter_message_header"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messagesAdapter_message_header_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:textColor="@color/vector_green_color"
        android:text = "A message here" />

    <View
        android:id="@+id/messagesAdapter_message_header_separator"
        android:layout_width="fill_parent"
        android:background="@color/vector_green_color"
        android:layout_height="1dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>

</LinearLayout>