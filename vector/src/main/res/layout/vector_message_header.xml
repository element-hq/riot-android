<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/messagesAdapter_message_header">
    
    <View
        android:id="@+id/messagesAdapter_message_header_top_margin"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="?attr/vector_light_gray_color">
        <TextView
            android:id="@+id/messagesAdapter_message_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="?attr/vector_text_black_color"
            android:text = "A message here" />
    </RelativeLayout>

    <View
        android:id="@+id/messagesAdapter_message_header_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>