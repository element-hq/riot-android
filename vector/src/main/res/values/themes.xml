        <item name="riot_primary_background_color">@color/riot_primary_background_color_dark</item>

        <!-- waiting view background -->
        <item name="waiting_background_color">#55555555</item>

        <!-- status bar color -->
        <item name="primary_dark_color">#191919</item>

        <!-- application bar color -->
        <item name="primary_color">@color/primary_color_dark</item>

        <!-- application bar text color -->
        <item name="primary_text_color">@android:color/white</item>

        <!-- application bar icons color -->
        <item name="primary_control_color">#5EA584</item>

        <!-- application bar text hint color -->
        <item name="primary_hint_text_color">@color/primary_hint_text_color_dark</item>

        <!-- default text colors -->
        <item name="riot_primary_text_color">@color/riot_primary_text_color_dark</item>
        <item name="default_text_hint_color">@color/default_text_hint_color_dark</item>
        <item name="default_text_light_color">@color/default_text_light_color_dark</item>
        <item name="default_button_light_text_color">@color/default_button_light_text_dark</item>
        <item name="default_text_dark_color">@color/default_text_light_color_dark</item>

        <!-- room message colors -->
        <item name="unsent_message_text_color">#FFFF4444</item>
        <item name="message_text_color">@android:color/white</item>
        <item name="notice_text_color">?attr/riot_primary_text_color</item>
        <item name="encrypting_message_text_color">@color/vector_green_color</item>
        <item name="sending_message_text_color">#AAA</item>
        <item name="highlighted_message_text_color">@color/vector_fuchsia_color</item>
        <item name="highlighted_searched_message_text_color">@color/vector_green_color</item>
        <item name="search_mode_room_name_text_color">#CCC3C3C3</item>
        <item name="unread_marker_line_color">@color/vector_green_color</item>
        <item name="markdown_block_background_color">@android:color/black</item>
        <item name="fenced_code_block_background_color">#FF00FF00</item>
        <item name="room_activity_divider_color">#565656</item>

        <!-- tab bar colors -->
        <item name="tab_bar_background_color">?attr/primary_color</item>
        <item name="tab_bar_inverted_background_color">?attr/primary_color</item>
        <item name="tab_bar_selected_background_color">
            @color/tab_bar_selected_background_color_dark
        </item>
        <item name="tab_bar_unselected_background_color">
            @color/tab_bar_unselected_background_color_dark
        </item>

        <!-- list colors -->
        <item name="list_header_background_color">#5A5A5A</item>
        <item name="list_divider_color">@color/list_divider_color_dark</item>
        <item name="list_header_subtext_color">?attr/primary_control_color</item>

        <!-- directory selection header -->
        <item name="list_header_public_room_spinner_text_color">#FFC7C7C7</item>
        <item name="list_header_public_room_spinner_color">#A5A5A5A5</item>

        <!-- gradient on the home bottom -->
        <item name="activity_bottom_gradient_color">#80000000</item>

        <!-- outgoing call background color -->
        <item name="pending_outgoing_view_background_color">#33FFFFFF</item>

        <!-- multi selection member background color -->
        <item name="multi_selection_background_color">#4d4d4d</item>

        <!-- sliding menu icon colors -->
        <item name="home_navigation_icon_color">?attr/primary_control_color</item>

        <!-- room notification text color (typing, unsent...) -->
        <item name="room_notification_text_color">#FF9D9D9D</item>

        <!-- icon colors -->
        <item name="default_icon_tint_color">@color/vector_green_color</item>
        <item name="settings_icon_tint_color">@android:color/white</item>
        <item name="icon_tint_on_light_action_bar_color">?attr/primary_control_color</item>>
        <item name="icon_tint_on_dark_action_bar_color">?attr/primary_control_color</item>

        <!-- theses colours are requested a background cannot be set by an ?att on android < 5 -->
        <!-- dedicated drawables are created for each theme -->
        <item name="avatar_mask">@drawable/avatar_mask_dark</item>
        <item name="avatar_mask_room_header">@drawable/avatar_mask_room_header_dark</item>
        <item name="avatar_mask_white_stroke">@drawable/avatar_mask_white_stroke_dark</item>
        <item name="line_divider">@drawable/line_divider_dark</item>
        <item name="vector_tabbar_selected_background">
            @drawable/vector_tabbar_selected_background_dark
        </item>
        <item name="vector_tabbar_unselected_background">
            @drawable/vector_tabbar_unselected_background_dark
        </item>
        <item name="vector_tabbar_background">@drawable/vector_tabbar_background_dark</item>

        <item name="pill_background_user_id">@drawable/pill_background_user_id_dark</item>
        <item name="pill_background_room_alias">@drawable/pill_background_room_alias_dark</item>

        <item name="pill_text_color_user_id">@android:color/white</item>
        <item name="pill_text_color_room_alias">@color/riot_primary_text_color_light</item>
    </style>

    <!-- BLACK THEME COLORS -->
    <style name="Theme.Vector.Black" parent="@style/Theme.Vector.Dark">
        <!-- Only setting the items we need to override to get the background to be pure black, otherwise inheriting -->
        <item name="riot_primary_background_color">@color/riot_primary_background_color_black</item>
        <item name="avatar_mask">@drawable/avatar_mask_black</item>
        <item name="avatar_mask_white_stroke">@drawable/avatar_mask_white_stroke_black</item>
        <item name="markdown_block_background_color">#FF4D4D4D</item>
        <item name="fenced_code_block_background_color">#FF00FF00</item>
    </style>

    <style name="Theme.Vector.EmptyLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="primary_color">@color/primary_color_light</item>
        <item name="riot_primary_background_color">@color/riot_primary_background_color_light</item>
        <item name="riot_primary_text_color">@color/riot_primary_text_color_light</item>
        <item name="primary_hint_text_color">@color/primary_hint_text_color_light</item>
        <item name="message_text_color">?attr/riot_primary_text_color</item>
    </style>

    <style name="Theme.Vector.EmptyDark" parent="Theme.AppCompat.Dialog">
        <item name="riot_primary_text_color">@color/riot_primary_text_color_dark</item>
        <item name="riot_primary_background_color">@color/riot_primary_background_color_dark</item>
        <item name="primary_hint_text_color">@color/primary_hint_text_color_dark</item>
        <item name="primary_color">@color/primary_color_dark</item>
        <item name="message_text_color">?attr/riot_primary_text_color</item>
    </style>

    <style name="Theme.Vector.EmptyBlack" parent="@style/Theme.Vector.EmptyDark">
        <item name="riot_primary_background_color">@color/riot_primary_background_color_black</item>
        <item name="primary_color">@color/riot_primary_background_color_black</item>
    </style>
</resources>
